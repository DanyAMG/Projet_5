@model Projet_5.Models.RepairViewModel

<h2>Ajouter une réparation</h2>
<form asp-action="AddRepair" asp-controller="Repair" method="post">
    <input type="hidden" asp-for="VehicleId" />

    <div class="form-group">
        <label asp-for="Reparation"></label>
        <input asp-for="Reparation" class="form-control" />
        <span asp-validation-for="Reparation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cost" class="control-label">Prix</label>
        <input asp-for="Cost" class="form-control" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
</form>