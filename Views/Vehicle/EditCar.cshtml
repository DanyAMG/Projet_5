@model Projet_5.Models.VehicleViewModel

<h2>Modifier le véhicule</h2>

<form asp-action="EditCar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="VIN"></label>
        <input asp-for="VIN" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Brand"></label>
        <input asp-for="Brand" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="VehiculeModel"></label>
        <input asp-for="VehiculeModel" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" type="number" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Sauvegarder</button>
</form>